{
  "name": "solar-sentinel",
  "version": "1.0.0",
  "description": "Solar Sentinel - UV index monitoring for Summit, NJ",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "start": "node server.js",
    "dev": "concurrently \"pnpm run dev:server\" \"pnpm run dev:client\"",
    "dev:server": "nodemon server.js",
    "dev:client": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.0",
    "@types/chart.js": "^2.9.41",
    "@types/express": "^5.0.3",
    "@types/node": "^20.0.0",
    "@types/supertest": "6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/ui": "^1.0.0",
    "chart.js": "^4.5.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "happy-dom": "^12.0.0",
    "jsdom": "^23.0.0",
    "nock": "14.0.10",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "puppeteer": "24.18.0",
    "supertest": "7.1.4",
    "typescript": "^5.0.0",
    "undici": "7.15.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "uv-index",
    "weather",
    "express",
    "chart",
    "solar",
    "sentinel"
  ],
  "author": "",
  "license": "ISC"
}
